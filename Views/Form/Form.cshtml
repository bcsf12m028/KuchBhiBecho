@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="form-area">
        <form role="form">

            <br style="clear:both" />
            <div class="row">
                <div class="col-sm-5">
                    <h3 style="font-family:mid; font-weight: bold; margin-bottom: 25px; text-align: center;font-size:30px;">
                       <b> Ad Details</b>
                    </h3>
                    <div class="form-group">
                        <input type="text" class="form-control" id="name" name="name" placeholder="Title " required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="email" name="email" placeholder="Price" required>
                    </div>
                    <div class="form-group">
                        <select class="form-control">
                            <option>Select City</option>
                            <option>
                                Lahore
                            </option>
                            <option>
                                Multan
                            </option>
                            <option>Islamabad</option>
                            <option>Quetta</option>
                            <option>Peshawar</option>
                            <option>Faisalabad</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" type="textarea" id="message" placeholder="Description of Item" maxlength="140" rows="5"></textarea>
                        <span class="help-block"><p id="characterLeft" class="help-block ">You have reached the limit</p></span>
                    </div>
                </div>
                <div class="col-sm-2"></div>
                <div class="col-sm-5">
                    <h3 style="font-family:mid;font-size:30px;
                            font-weight:bold;margin-bottom:25px; text-align:center;">
                       <b> Your Contact</b>
                    </h3>
                    <div class="form-group">
                        <input type="text" class="form-control" id="mobile" name="mobile" placeholder="Name" required>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" type="textarea" id="message" placeholder="Address(Optional)" rows="4"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="mobile" name="mobile" placeholder="Mobile Number" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="mobile" name="mobile" placeholder="Email" required>
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="col-sm-5"></div>
                <div class="col-sm-2">
                    <button type="button" id="submit" name="submit" class="btn btn-primary" style="width: 200px; background-image: url(../Image/6.jpg); border: none; margin-top: 20px; font-family: mid; font-weight: bold; font-size: 120%;margin-left:-20px;">Publish Ad</button>
                </div>
                <div class="col-sm-5"></div>

            </div>
        </form>
    </div>
</div>
